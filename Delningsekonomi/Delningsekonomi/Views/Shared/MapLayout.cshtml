
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
    <title>Places Searchbox</title>
    <style>


        html {
            padding: 0;
            margin: 0;
            top: 0;
            height: 0px;
        }

        body {
            display: block;
            margin: 0px;
        }


        #pac-input {
            background-color: #fff;
            font-family: Roboto;
            font-size: 15px;
            width: 78%;
            padding: 0;
            margin-top: 2px;
            height: 30px;
        }

        #pac-input:focus {
        }


        .sidenav {
            height: 100%;
            width: 70%;
            position: fixed;
            z-index: 2;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            transition: 0.5s;
        }

        .sidenav a {
            padding: 8px 8px 8px 8px;
            text-decoration: none;
            font-size: 25px;
            color: #818181;
            display: block;
            transition: 0.3s;
        }

        .sidenav a:hover {
            color: #f1f1f1;
        }

        .sidenav .closebtn {
            position: absolute;
            top: 0;
            font-size: 36px;
        }

        #toplogin {
            top: 0;
            height: 200px;
            width: 100%;
            position: relative;
            background-color: aqua;
        }
        #loggaut{
            background-color: aquamarine;
        }
        #email {
            bottom: 0;
            font-size: 5vw;
            margin: 5px;
            position: absolute;
        }
        #nameuser {
            bottom: 10px;
            font-size: 5vw;
            margin-left: 5px;
            position: absolute;
        }
        #avatardiv {
            position: absolute;
            right: 0;
            height: 100px;
            width: 100px;
            margin: 5%;
        }
        .avatar {
            vertical-align: middle;
            width: 100%;
            height: 100%;
            border-radius: 50%;
        }
        #menu {
            background-color: black;
            position: fixed;
            width: 100%;
            height: auto;
            opacity: 0.7;
            top: 0;
            margin: 0;
            padding: 0;
            left: 0;
            display: inline-block;
            z-index: 1;
        }

        #left {
            float: left;
            width: 50px;
            background-color: green;
        }

        #righ {
            float: right;
            width: 100%;
            background-color: mediumpurple;
        }

        #hamburger {
            font-size: 30px;
            cursor: pointer;
            color: white;
            width: 12%;
            float: left;
            text-align: center;
        }

        #map {
            margin-top: 62px;
            height: calc(100vh - 100px);
            width: 100vw;

        }

        .body-content {
            padding: 0;
            margin: 0;
        }
    </style>
</head>
<body>
        @RenderBody()
</body>
</html>