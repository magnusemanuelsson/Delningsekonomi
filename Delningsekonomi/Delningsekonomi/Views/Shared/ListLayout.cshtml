
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/sidemenu.css" />
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
    <title>Places Searchbox</title>
    <style>


        html {
            padding: 0;
            margin: 0;
            top: 0;
        }

        body {
            display: block;
            margin: 0px;
        }

        .body-content {
            padding: 0;
            margin: 0;
        }

        .list_content {
            margin-top: 10vh;
            font-family: 'Roboto', sans-serif;
            height: 80vh;
        }

        .list {
            padding: 3vh;
            clear: both;
            border-left: solid 0.5vh;
            border-right: solid 0.5vh;
            border-bottom: solid 0.25vh;
            border-top: solid 0.25vh;
            border-color: lightgray;
            height: 16vh;
        }

        .list_title {
            float: left;
            display: inline-block;
            width: 75%;
            height:25%;
            overflow: hidden;
            font-size: 3vh;
            font-weight: bold;
        }

        .list_distance {
            float: right;
            display: inline-block;
            width: 25%;
            height: 25%;
            overflow: hidden;
            text-align: right;
            font-size: 3vh;
            font-weight: bold;
        }

        .list_desc {
            float: left;
            display: inline-block;
            width: 75%;
            max-height: 75%;
            overflow: auto;
            font-size: calc(1vw + 1vh + 1vmin);
        }

        .list_img img {
            float: right;
            display: inline-block;
            max-height: 12vh;
            max-width: 20vw;
        }
    </style>
</head>
<body>
        @RenderBody()
</body>
</html>