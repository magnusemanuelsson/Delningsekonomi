<!DOCTYPE html>
<html>
<head>

    <script src="~/Scripts/jquery-1.10.2.js"></script>

    <script>
$(document).ready(function () {
            $("#time_filter").click(function () {
                if ($("#cat_hidden").css("display") == "none") {
                    $("#time_hidden").slideToggle(100);
                }
                else {
                    $("#cat_hidden").slideUp(100);
                    setTimeout(function () {
                        $("#time_hidden").slideToggle(100);
                    }, 100);
                }
            });
        });

        $(document).ready(function () {
            $("#cat_filter").click(function () {
                if ($("#time_hidden").css("display") == "none") {
                    $("#cat_hidden").slideToggle(100);
                }
                else {
                    $("#time_hidden").slideUp(100);
                    setTimeout(function () {
                        $("#cat_hidden").slideToggle(100);
                    }, 100);
                }
            });
        });</script>
</head>
<body>
    <style>
        html, body {
            width: 100%;
            margin: 0;
        }

        #jquerytests2 {
            position: fixed;
            width: 100%;
            bottom: 0;
        }

        .bot-menu {
            box-sizing: border-box;
            float: left;
            width: 33vw;
            height: 10vh;
            border: solid 2px;
            text-align: center;
            position: relative;
            background-color: dimgray;
            border-color: gray;
        }

        #cat_filter {
            width: 34vw;
        }

        .bot-menu .buttons div {
            width: 100%;
            height: 10vh;
            display: table;
        }

        .bot-menu .buttons h4 {
            display: table-cell;
            text-align: center;
            vertical-align: middle;
        }
        .menubuttom {
            height: 8vh;
            width: 8vh;
            top: 0;
            position: absolute;
            left: 0;
            bottom: 0;
            right: 0;
            margin: auto;
        }

        .submenu {
            clear: both;
            display: none;
        }
    </style>
    <div id="jquerytests2">
        <div id="time_filter" class="bot-menu">
            <div id="time_button" class="buttons">
                <div>
                    <img src="~/Images/Time_Icon.png" class="menubuttom" alt="Tid">
                </div>
            </div>
        </div>
        <div id="cat_filter" class="bot-menu">
            <div id="cat_button" class="buttons">
                <div>
                    <img src="~/Images/Filter_Icon.png"  class="menubuttom" alt="Tid">
                </div>
            </div>
        </div>
        <div id="list" class="bot-menu">

            <div id="list_button" class="buttons">
                <div>
                    <a href="@Url.Action("ListView", "Home")">
                    <img src="~/Images/List_Icon.png" alt="Tid" class="menubuttom" href="~/Home/ListView.cshtml">
                    </a>
                 </div>
            </div>
        </div>
        <div id="time_hidden" class="submenu">
            tids-filter
        </div>
        <div id="cat_hidden" class="submenu">
            <input type="checkbox" id="filter_orange" class="filterCheck" name="Orange" value="true" /> Offers
            <input type="hidden" name="Orange" value="false" />
            <input type="checkbox" id="filter_blue" class="filterCheck" name="Blue" value="true" /> Requests
            <input type="hidden" name="Blue" value="false" />
            <br />
            <input type="checkbox" id="filter_buy" class="filterCheck" name="Buy" value="true" /> Buy & Sell
            <input type="hidden" name="Buy" value="false" />
            <input type="checkbox" id="filter_rent" class="filterCheck" name="Rent" value="true" /> Rent
            <input type="hidden" name="Rent" value="false" />
            <input type="checkbox" id="filter_service" class="filterCheck" name="Service" value="true" /> Service
            <input type="hidden" name="Service" value="false" />
            <br />
            <input type="checkbox" id="filter_food" class="filterCheck" name="Food" value="true" /> Food
            <input type="hidden" name="Food" value="false" />
            <br />
            <input type="checkbox" id="filter_vehicle" class="filterCheck" name="Vehicle" value="true" /> Vehicle
            <input type="hidden" name="Vehicle" value="false" />
            <br />
            <input type="checkbox" id="filter_misc" class="filterCheck" name="Misc" value="true" /> Misc
            <input type="hidden" name="Misc" value="false" />
            <br />
            <input type="submit" value="Save" onclick="save_data()" />
        </div>
    </div>

</body>
</html>
